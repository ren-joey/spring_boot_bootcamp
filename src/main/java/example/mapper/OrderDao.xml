<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="example.dao.OrderDao">

    <!-- 查詢所有訂單 -->
    <select id="getAllOrders" resultType="example.entity.Order">
        SELECT * FROM orders
    </select>

    <!-- 查詢並返回 DTO -->
    <select id="getOrderById" resultType="example.dto.OrderResponseDto">
        SELECT * FROM orders WHERE id = #{orderId}
    </select>

</mapper>
